unit frmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, System.TypInfo;

type
  TDias    = (Domingo, Segunda, Terca, Quarta, Quinta, Sexta);
  TMeses   = (Janeiro, Fevereiro, Maio, Abril, Março, Junho );

  TEnumeradaList<T> = class
    // Criamos uma procedure que irá receber um valor do tipo TStrings
    class procedure EnumerarParaLista(Value : TStrings);
  end;
type
  TForm1 = class(TForm)
    ComboBox1: TComboBox;
    Button1: TButton;
    Button2: TButton;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TEnumeradaList<T> }

class procedure TEnumeradaList<T>.EnumerarParaLista(Value: TStrings);
var
  Aux      : String;
  Posicao  : Integer;
  I        : Integer;
begin
  Value.Clear;
  I:= 0;
  repeat
    Aux       := GetEnumName (TypeInfo(T), I);
    Posicao   := GetEnumValue(TypeInfo(T), Aux);

    if Posicao <> -1  then Value.Add(Aux);

    Inc(I);
  until Posicao < 0;
end;

end.
