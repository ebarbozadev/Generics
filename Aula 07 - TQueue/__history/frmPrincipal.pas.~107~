unit frmPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls,
  System.Generics.Collections;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Edit1: TEdit;
    Memo1: TMemo;
    Label5: TLabel;
    Memo2: TMemo;
    Label6: TLabel;
    Button1: TButton;
    Memo3: TMemo;
    Label7: TLabel;
    Button3: TButton;
    Button2: TButton;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
    ListaQueue : TQueue<Integer>;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  UltimaSenha    : Integer;
  ValorFormatado : String;
begin
  UltimaSenha    := StrToInt(Edit1.Text);

  ValorFormatado := FormatFloat('00000', UltimaSenha);
  
  if Length(ValorFormatado) <= 5 then
  begin
    ListaQueue.Enqueue(StrToInt(ValorFormatado));

    Memo2.Lines.Add('Adc: ' + ValorFormatado);
    Edit1.Text := '';
  end
  else
    MessageDlg('A senha deve ter no máximo 5 números', TMsgDlgType.mtError, [TMsgDlgBtn.mbOK], 0);
  
  
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  ListaQueue := TQueue<Integer>.Create;
end;

end.
